{
  "compilerOptions": {
    "target": "ES2015",
    "jsx": "react",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "exclude": ["dist", "node_modules"],
  "include": ["client/**/*", "server/**/*"]
}
